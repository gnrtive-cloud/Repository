  <script>
    // --- CONFIGURATION ---
    const GOOGLE_SHEET_ENDPOINT = "https://script.google.com/macros/s/AKfycby385Neucsh0b8zQhHsetpr1809Qw0fKn8vLMVBnm6saPcrJBKke7eXaZn3s5hdnHR76Q/exec";

    const leadForm = document.getElementById("lead-form");
    const statusMessage = document.getElementById("status-message");
    const submitButton = document.getElementById("submit-button");
    const fileInput = document.getElementById('bankStatements');
    const slider = document.getElementById('amountSlider');
    const display = document.getElementById('sliderValueDisplay');
    const phoneInput = document.getElementById("phone");

    // Slider
    slider.addEventListener('input', () => {
       let val = parseInt(slider.value);
       display.textContent = val >= 1000000 ? "$1,000,000+" : "$" + val.toLocaleString();
    });

    // Phone Format
    phoneInput.addEventListener("input", () => {
      let digits = phoneInput.value.replace(/\D/g, "");
      if (digits.length > 10) digits = digits.slice(0, 10);
      phoneInput.value = digits;
    });

    // File to Base64
    const fileToBase64 = (file) => {
      return new Promise((resolve, reject) => {
        const reader = new FileReader();
        reader.readAsDataURL(file);
        reader.onload = () => resolve({
          name: file.name,
          type: file.type,
          data: reader.result.split(',')[1]
        });
        reader.onerror = error => reject(error);
      });
    };

    // Submit Logic
    leadForm.addEventListener("submit", async (event) => {
      event.preventDefault();
      statusMessage.textContent = "Processing...";
      statusMessage.className = "text-gray";
      submitButton.disabled = true;
      submitButton.style.opacity = "0.6";

      try {
        const files = fileInput.files;
        let filePayload = [];

        // Check file sizes (Limit 3MB per file)
        for(let i=0; i<files.length; i++){
            if(files[i].size > 3 * 1024 * 1024) {
                throw new Error("File " + files[i].name + " is too large. Max 3MB allowed.");
            }
        }

        if (files.length > 0) {
          statusMessage.textContent = "Uploading files (this may take a moment)...";
          filePayload = await Promise.all(Array.from(files).map(fileToBase64));
        }

        const formData = new FormData(leadForm);
        const dataObj = Object.fromEntries(formData.entries());
        if (filePayload.length > 0) dataObj.files = filePayload;

        const response = await fetch(GOOGLE_SHEET_ENDPOINT, {
          method: "POST",
          body: JSON.stringify(dataObj)
        });

        // Get the actual text response from the server to debug
        const resultText = await response.text(); 
        
        if (resultText.includes("Error")) {
            throw new Error(resultText);
        }

        statusMessage.textContent = "Success! We received your application.";
        statusMessage.className = "text-success";
        leadForm.reset();
        
      } catch (error) {
        console.error(error);
        statusMessage.textContent = "Error: " + error.message;
        statusMessage.className = "text-error";
      } finally {
        submitButton.disabled = false;
        submitButton.style.opacity = "1";
      }
    });
  </script>
