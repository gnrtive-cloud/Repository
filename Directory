<script type="module">
  // Import the functions you need from the SDKs you need
  import { initializeApp } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-app.js";
  import { getFirestore, collection, addDoc, serverTimestamp } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-firestore.js";
  import { getStorage, ref, uploadBytes } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-storage.js";

  // --- CONFIGURATION ---
  // PASTE YOUR FIREBASE CONFIG HERE (The one you copied earlier)
const firebaseConfig = {
  apiKey: "AIzaSyCE8v3hv0Smt57HWY62q8wXuGB0jf0rnTE",
  authDomain: "safefundr-v2.firebaseapp.com",
  projectId: "safefundr-v2",
  storageBucket: "safefundr-v2.firebasestorage.app",
  messagingSenderId: "727467428238",
  appId: "1:727467428238:web:88ed8674f60752e3b7fcdf"
};

  // Initialize Firebase
  const app = initializeApp(firebaseConfig);
  const db = getFirestore(app);
  const storage = getStorage(app);

  // --- UI References ---
  const leadForm = document.getElementById("lead-form");
  const statusMessage = document.getElementById("status-message");
  const successMessage = document.getElementById("success-message");
  const submitButton = document.getElementById("submit-button");
  const fileInput = document.getElementById('bankStatements');
  const slider = document.getElementById('amountSlider');
  const display = document.getElementById('sliderValueDisplay');
  const phoneInput = document.getElementById("phone");
  const phoneContainer = document.getElementById("phone-container");

  // --- UI Interactions ---
  slider.addEventListener('input', () => {
     let val = parseInt(slider.value);
     display.textContent = val >= 1000000 ? "$1,000,000+" : "$" + val.toLocaleString();
  });

  phoneInput.addEventListener("input", () => {
    let digits = phoneInput.value.replace(/\D/g, "");
    if (digits.length > 10) digits = digits.slice(0, 10);
    phoneInput.value = digits;
  });

  function handleFormInteraction(event) {
    const isInput = event.target.tagName === "INPUT" || event.target.tagName === "SELECT";
    if (event.type === "focusin" && isInput && event.target.type !== 'range') {
      phoneContainer.classList.add("expanded");
    } else if (event.type === "focusout") {
      setTimeout(() => {
        if (!leadForm.contains(document.activeElement)) {
          phoneContainer.classList.remove("expanded");
        }
      }, 10);
    }
  }
  leadForm.addEventListener("focusin", handleFormInteraction);
  leadForm.addEventListener("focusout", handleFormInteraction);

  // --- SUBMIT LOGIC ---
  leadForm.addEventListener("submit", async (event) => {
    event.preventDefault();
    
    // UI Loading State
    statusMessage.textContent = "Securing connection...";
    statusMessage.className = "text-gray";
    statusMessage.classList.remove("hidden");
    submitButton.disabled = true;
    submitButton.style.opacity = "0.6";

    try {
      const formData = new FormData(leadForm);
      const timestamp = Date.now();
      
      // 1. Upload Files first (if any)
      const files = fileInput.files;
      let filePaths = [];

      if (files.length > 0) {
        statusMessage.textContent = `Encrypting and uploading ${files.length} document(s)...`;
        
        for (let i = 0; i < files.length; i++) {
          const file = files[i];
          
          // Client-side size check (10MB)
          // 10MB = 10 * 1024 * 1024 bytes
          if(file.size > 10 * 1024 * 1024) throw new Error(`File ${file.name} is too large (Max 10MB).`);

          // Create a unique path
          const filePath = 'uploads/' + timestamp + '_' + file.name;
          const storageRef = ref(storage, filePath);
          
          // Upload ONLY (Do not ask for download URL afterwards)
          await uploadBytes(storageRef, file);
          
          // Save the reference path so Admin can find it later
          filePaths.push(filePath); 
        }
      }

      // 2. Prepare Data Object
      statusMessage.textContent = "Finalizing secure application...";
      
      const loanApplication = {
        firstName: formData.get("firstName"),
        lastName: formData.get("lastName"),
        businessName: formData.get("businessName"),
        email: formData.get("email"),
        phone: formData.get("phone"),
        amountNeeded: formData.get("amountNeeded"),
        ageOfBusiness: formData.get("ageOfBusiness"),
        avgRevenue: formData.get("avgRevenue"),
        hasChecking: formData.get("hasChecking"),
        needImmediately: formData.get("needImmediately"),
        agreePrivacy: true,
        submittedAt: serverTimestamp(),
        filePaths: filePaths // Saving the storage paths
      };

      // 3. Save to Firestore Database
      await addDoc(collection(db, "loan_applications"), loanApplication);

      // Success UI
      statusMessage.classList.add("hidden");
      successMessage.classList.remove("hidden");
      leadForm.reset();
      
      slider.value = 50000;
      display.textContent = "$50,000";
      phoneContainer.classList.remove("expanded");

    } catch (error) {
      console.error("Submission Error:", error);
      statusMessage.textContent = "Error: " + error.message;
      statusMessage.className = "text-error";
      successMessage.classList.add("hidden");
    } finally {
      submitButton.disabled = false;
      submitButton.style.opacity = "1";
    }
  });
</script>
